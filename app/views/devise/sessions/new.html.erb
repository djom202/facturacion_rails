<style type="text/css">
	.form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }
      #form{
      	text-align:center;
      }
</style>
<div id="form">
	<%= form_for(resource, :as => resource_name, :html => { :class => "form-signin" }, :url => session_path(resource_name)) do |f| %>
		<h2 class="form-signin-heading">Sign in</h2>
    	<%= f.email_field :email, :autofocus => true, :placeholder => "email", :class => "input-block-level" %>
    	<%= f.password_field :password, :placeholder => "password", :class => "input-block-level" %>
		<% if devise_mapping.rememberable? -%>
    		<%= f.check_box :remember_me %> <%= f.label :remember_me %>
  		<% end -%>
  		<br>
  		<div class="controls">
      		<%= f.submit "Sign in", :class => "btn btn-large btn-primary" %>
    	</div>
	<% end %>
	<%= render "devise/shared/links" %>
</div>